<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" spacing="5.0" xmlns="http://javafx.com/javafx/10.0.2" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox>
         <children>
            <Label prefHeight="17.0" prefWidth="100.0" text="%LblLoginUsername" />
            <TextField fx:id="txtUsername" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Label prefHeight="17.0" prefWidth="100.0" text="%LblLoginPassword" />
            <PasswordField fx:id="txtPassword" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox nodeOrientation="RIGHT_TO_LEFT">
         <children>
            <Button fx:id="btnLogin" alignment="CENTER_RIGHT" defaultButton="true" mnemonicParsing="false" text="%BtnLogin" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
